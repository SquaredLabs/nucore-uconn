- if @facilities.any?
  - if @recently_used_facilities.present?
    %h4.facility_listing.js--facility_listing.recent= text(".recently_used")
    - @recently_used_facilities.each do |facility|
      .facility_listing.js--facility_listing.recent
        %h4.header-tight= link_to facility, facility_path(facility)
  - if not @azlist_on
    %hr
  %h4.facility_listing.js--facility_listing.all_header= text(".all")
  -# value[0] = letter, value[1] = facilities, index = number
  - @azlist.to_a.map.with_index do | (letter, matched_facilities), index|
    - matched_facilities.each do |facility|
      .facility_listing.js--facility_listing{:class=>get_classname_for_facility(index, letter)}
        %h4.header-tight= link_to facility, facility_path(facility)
        %p= facility.short_description
- else
  .alert.alert-info= t(".empty", items: Facility.model_name.human(count: 2))
